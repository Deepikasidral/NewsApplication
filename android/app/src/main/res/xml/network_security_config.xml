<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Trust user-added certificates (for development/debugging) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow all certificates for your backend server -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">13.51.242.86</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
</network-security-config>
